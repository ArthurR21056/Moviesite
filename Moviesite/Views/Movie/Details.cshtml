@model Moviesite.Models.Movie

@{
    ViewBag.Title = "title";

}

<h2>@Model.Name</h2>

<h3>Description</h3>
<p>@Model.Description</p>
<p>Price: $@Model.PriceOfMovie.00</p>
@if (Model.Quantity > 0)
{
<button class="btn-primary">Rent</button>
<button class="btn-primary">Buy</button>
<button class="btn-primary">Add to Cart</button>
}
else
{
    <button class="btn-primary">@Html.ActionLink("Sold Out", "Index", "Movie", new { @class = "btn-primary" })</button>
}
<button class="btn-primary">@Html.ActionLink("Edit", "Edit", "Movie", new { @class = "btn-primary" })</button>


